.ListItem {
  border-top: 1px solid #c8c7cc;
  position: relative
  flex-flow: row;
  justify-content: space-between;
  padding: 12px 0;

  &:first-child {
    border-top: none;
  }

  * {
    max-width: 100%;
  }

  a {
    text-decoration: none;
    align-self: flex-start;
    order: 1;
    margin: auto 0;
    flex: 1;
  }
}

.ListItem--content {
  a {
    width: 100%;
    flex-flow: row;
    justify-content: space-between;

    &:after {
      content: url(unquote('data:image/svg+xml;base64,'));
      transform: scale(0.2);
      width: 0;
      height: 0;
      margin: auto 24px auto 0;
      top: -6px;
      position: relative;
      opacity: 0.2;
    }
  }
}